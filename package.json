{
  "name": "image-converter",
  "version": "1.0.0",
  "description": "Desktop image converter with batch processing",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:portable": "npm run build && electron-builder --win portable"
  },
  "keywords": [
    "electron",
    "image",
    "converter",
    "batch"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.1"
  },
  "build": {
    "appId": "com.imageconverter.app",
    "productName": "Image Converter",
    "asar": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/sharp/**/*"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "fileAssociations": [
      {
        "ext": "jpg",
        "name": "JPEG Image",
        "description": "JPEG Image File",
        "role": "Viewer"
      },
      {
        "ext": "jpeg",
        "name": "JPEG Image",
        "description": "JPEG Image File",
        "role": "Viewer"
      },
      {
        "ext": "png",
        "name": "PNG Image",
        "description": "Portable Network Graphics",
        "role": "Viewer"
      },
      {
        "ext": "webp",
        "name": "WebP Image",
        "description": "WebP Image Format",
        "role": "Viewer"
      },
      {
        "ext": "avif",
        "name": "AVIF Image",
        "description": "AV1 Image File Format",
        "role": "Viewer"
      },
      {
        "ext": "tiff",
        "name": "TIFF Image",
        "description": "Tagged Image File Format",
        "role": "Viewer"
      },
      {
        "ext": "tif",
        "name": "TIFF Image",
        "description": "Tagged Image File Format",
        "role": "Viewer"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": true,
      "include": "build/installer.nsh"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
